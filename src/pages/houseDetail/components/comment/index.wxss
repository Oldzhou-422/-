.comment-wrapper {
  margin-top: 1rem;
}
.comment-wrapper .title {
  font-size: 1.3rem;
  font-weight: 600;
  margin-left: 0.5rem;
}
.comment-wrapper .comment-list {
  background-color: #fff;
  height: 20rem;
  overflow: auto;
}
.comment-wrapper .comment-list .item {
  padding: 1rem;
  display: flex;
  flex-direction: row;
}
.comment-wrapper .comment-list .item .avatar {
  height: 3rem;
  width: 3rem;
  border-radius: 50%;
}
.comment-wrapper .comment-list .item .user-info {
  margin-left: 2rem;
}
.comment-wrapper .comment-list .item .user-info .name {
  font-size: 1rem;
  font-weight: 600;
}
